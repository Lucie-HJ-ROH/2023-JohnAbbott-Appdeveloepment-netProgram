<Window x:Class="Day02WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day02WPFHelloWorld"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Hello App" Height="154" Width="370">
    <Grid>
        <Label Content="What is your name?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="165"/>
        <TextBox Name="TbxName" HorizontalAlignment="Left" Margin="180,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
        <Button Name="BtSayHelloLabel" Content="Say hello (label)" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="155" Click="BtSayHelloLabel_Click"/>
        <Button Name="BtSayHelloMsgBox" Content="Say hello (msg box)" HorizontalAlignment="Left" Margin="180,46,0,0" VerticalAlignment="Top" Width="155" Click="BtSayHelloMsgBox_Click"/>
        <Label Name="LblGreeting" Content="..." HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="325"/>

    </Grid>
</Window>
